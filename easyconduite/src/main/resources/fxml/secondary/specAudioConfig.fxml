<GridPane styleClass="gridConfig" stylesheets="@../../styles/trackConfig.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="Fade In (s)" />
      <Label styleClass="gridConfig" text="Fade Out (s)" GridPane.rowIndex="1" />
      <Spinner fx:id="fadeInSpinner" GridPane.columnIndex="1" />
      <Spinner fx:id="fadeOutSpinner" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
</GridPane>
