<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="mainPane" stylesheets="@../styles/easyconduite.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easyconduite.controllers.EasyconduiteController">
   <children>
      <VBox onKeyPressed="#handleKeyCodePlay">
        <children>
          <MenuBar style="-fx-background-color: #727272;" VBox.vgrow="NEVER">
            <menus>
              <Menu mnemonicParsing="false" text="%menu.file.title">
                <items>
                  <MenuItem fx:id="fichierouvrir" mnemonicParsing="false" onAction="#handleOpen" text="%menu.file.open">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="%menu.file.save">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="%menu.file.saveas" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#handleCloseTab" text="%menu.file.close" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#handlePreferences" text="%menu.file.preferences" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#handleQuit" text="%menu.file.quit">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                </items>
              </Menu>
                  <Menu mnemonicParsing="false" text="%menu.track.title">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleImportAudio" text="%menu.track.import">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="I" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handlePauseAll" text="%menu.track.pause" />
                        <MenuItem mnemonicParsing="false" onAction="#handleStopAll" text="%menu.track.stop" />
                        <MenuItem mnemonicParsing="false" onAction="#menuTrackEdit" text="%track.context.properties">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#menuTrackDelete" text="%track.context.delete">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="D" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                    </items>
                  </Menu>
              <Menu mnemonicParsing="false" text="%menu.cue.title">
                <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleRazChrono" text="RAZ Timer">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                </items>
              </Menu>
              <Menu mnemonicParsing="false" text="%menu.help.title">
                <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="%menu.help.about" />
                </items>
              </Menu>
            </menus>
               <effect>
                  <Blend />
               </effect>
          </MenuBar>
            <BorderPane fx:id="trackstable" stylesheets="@../styles/easyconduite.css" VBox.vgrow="ALWAYS">
               <top>
                  <HBox fx:id="infoBaseLine" alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Region prefHeight="200.0" prefWidth="200.0" stylesheets="@../styles/easyconduite.css" />
                        <StackPane fx:id="timelinepane" alignment="CENTER_LEFT">
                           <children>
                              <Label fx:id="timeLineLabel" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" prefHeight="0.0" prefWidth="495.0" style="-fx-background-color: transparent;" textAlignment="CENTER" textFill="#00d936" />
                           </children>
                           <padding>
                              <Insets right="20.0" />
                           </padding>
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </StackPane>
                        <Rectangle fx:id="timeLineRectangle" arcHeight="5.0" arcWidth="5.0" fill="#203029" stroke="#a8b0bb" strokeType="INSIDE" />
                        <ToggleButton fx:id="chronobutton" mnemonicParsing="false" onMouseClicked="#handleMouseAction" styleClass="chrono-button" stylesheets="@../../styles/Styles.css" text="ON" textAlignment="CENTER" />
                        <Label fx:id="timer" alignment="CENTER" contentDisplay="RIGHT" stylesheets="@../styles/easyconduite.css" text="00:00:00" textAlignment="CENTER" textFill="#00d936">
                           <font>
                              <Font size="24.0" />
                           </font>
                           <padding>
                              <Insets left="10.0" right="10.0" />
                           </padding>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                     </children>
                     <BorderPane.margin>
                        <Insets top="2.0" />
                     </BorderPane.margin>
                  </HBox>
               </top>
               <center>
                  <StackPane BorderPane.alignment="CENTER">
                     <children>
                        <FlowPane fx:id="tableLayout" rowValignment="TOP" stylesheets="@../styles/easyconduite.css" />
                        <Pane fx:id="calquePane" mouseTransparent="true" />
                     </children>
                  </StackPane>
               </center>
            </BorderPane>
        </children>
      </VBox>
   </children>
</StackPane>
