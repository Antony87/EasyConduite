    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>easyconduite</artifactId>
            <version>1.2</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <resourcesDir>${basedir}/src/main/resources</resourcesDir>
    </properties>  
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>                            
                        <configuration>
                            <finalName>easyconduite</finalName>
                            <appendAssemblyId>false</appendAssemblyId>        
                            <descriptors>
                                <descriptor>${resourcesDir}/assembly/easyconduite-build.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>                        
                </executions>
            </plugin>
        </plugins>       
    </build>
    <profiles>
        <profile>
            <id>sh</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <executions>
                            <execution>
                                <id>create_sh</id>                      
                                <phase>install</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>${resourcesDir}/scripts/makeself-2.3.1/makeself.sh</executable>
                                    <arguments>
                                        <argument>${project.build.directory}/easyconduite</argument>
                                        <argument>easyconduite_setup.sh</argument>
                                        <argument>"A super simple sampler"</argument>
                                        <argument>./installer/setup.sh</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>  
                    </plugin>                    
                </plugins>               
            </build>        
        </profile>   
        <profile>
            <id>exe</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <executions>
                            <execution>
                                <id>create_exe</id>                      
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>C:/Users/antony/Documents/launch4j-3.11-win32/launch4j/launch4j.exe</executable>
                                    <arguments>
                                        <argument>${resourcesDir}/launch4j/launch-easyconduite.xml</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                            <execution>
                                <id>create_installer</id>                      
                                <phase>install</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>"C:/Program Files (x86)/Inno Setup 5/ISCC.exe"</executable>
                                    <arguments>
                                        <argument>${project.build.directory}/easyconduite/installer/install_easyconduite.iss</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>  
                    </plugin>
