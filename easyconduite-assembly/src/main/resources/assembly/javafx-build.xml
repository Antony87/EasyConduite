<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
          http://maven.apache.org/xsd/assembly-1.1.2.xsd" >
    <id>win</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>src/main/resources/scripts/easyconduite.bat</source>
            <destName>easyconduite-${project.version}.bat</destName>
            <filtered>true</filtered>
        </file>
        <file>
            <source>target/easyconduite-${project.version}-win.jar</source>
        </file>
    </files>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>com.antonyweb</exclude>
                <exclude>com.fasterxml.jackson.core</exclude>
                <exclude>org.apache.logging.log4j</exclude>
                <exclude>javax.xml.bind</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
