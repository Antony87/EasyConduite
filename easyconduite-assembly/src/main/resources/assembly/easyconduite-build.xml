<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>easyconduite-build</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>com.antonyweb:easyconduite:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>images/*.*</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/docs</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>docs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/innosetup</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>installer_src</outputDirectory>
        </fileSet>
                <fileSet>
            <directory>src/main/resources/script/i18_linux</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <filtered>true</filtered>
            <outputDirectory>bin/i18_linux</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/resources/scripts/easyconduite.bat</source>
            <destName>easyconduite-${project.version}.bat</destName>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/scripts/easyconduite.sh</source>
            <destName>easyconduite-${project.version}.sh</destName>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
        </file>        
    </files>
</assembly>
